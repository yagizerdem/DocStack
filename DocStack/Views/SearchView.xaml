<UserControl x:Class="DocStack.Views.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocStack.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
            xmlns:converters="clr-namespace:DocStack.Converters"
            xmlns:components="clr-namespace:DocStack.Components"
            xmlns:entity="clr-namespace:Models.Entity;assembly=Models">
    <UserControl.Resources>
        <Style  TargetType="TextBlock">
            <Setter Property="Foreground"
            Value="White"/>
            <Setter Property="FontSize"
            Value="16"/>
        </Style>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToInverseBooleanConverter x:Key="BooleanToInverseBooleanConverter" />
    </UserControl.Resources>

    <Grid Background="{StaticResource MatteBlackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--switch views-->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <CheckBox IsChecked="{Binding IsListView, Mode=TwoWay}"
                      Margin="20 0" 
                      Foreground="White"
                      FontWeight="Bold">List View</CheckBox>
            <CheckBox IsChecked="{Binding IsListView, Converter={StaticResource BooleanToInverseBooleanConverter}}"
                      Margin="20 0"
                      Foreground="White"
                      FontWeight="Bold">Grid View</CheckBox>

        </StackPanel>
        
        <!--search bar-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBox 
                    Grid.Column="0"
                    Margin="10" 
              Style="{StaticResource  ModernTextBox}"
              MaxWidth="500"
              VerticalContentAlignment="Center"
              FontWeight="Bold"
              Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              KeyDown="TextBox_KeyDown"></TextBox>

                <Button  Grid.Column="1" 
                         Margin="20 0 0 0"
                         Height="30"
                         Style="{StaticResource ModernButton}"
                         Command="{Binding SearchCommand}">Search</Button>
            </Grid>
        </Grid>

        <!--loader-->
        <StackPanel 
            Grid.Row="2"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <components:Spinner Margin="0 50"></components:Spinner>
        </StackPanel>


        <!-- Display Works -->
        <Grid Grid.Row="2"
      Visibility="{Binding IsNotLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
      Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="120"></RowDefinition>
            </Grid.RowDefinitions>
            
            <!--list view-->
            <ListBox ItemsSource="{Binding WorksList}"
         Grid.Row="0"
         Background="Transparent"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         VerticalAlignment="Stretch"
         HorizontalAlignment="Stretch"
         Width="Auto"
         HorizontalContentAlignment="Stretch"
         SelectedItem="{Binding SelectedWorkEntity, Mode=TwoWay}"
         Visibility="{Binding IsListView, Converter={StaticResource BooleanToVisibilityConverter}}">

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="entity:WorkEntity">
                        <Grid Margin="20">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#f8f8f8"
                        Text="{Binding Title}"
                        TextWrapping="Wrap" />

                            <StackPanel
                        Grid.Row="1"
                        Margin="0,0,0,8"
                        Orientation="Horizontal">
                                <TextBlock
                            FontSize="14"
                            Foreground="#B8B8B8"
                            Text="{Binding Publisher}"
                            TextWrapping="Wrap" />
                                <TextBlock
                            Margin="8,0"
                            FontSize="14"
                            Foreground="#B8B8B8"
                            Text=" • " />
                                <TextBlock
                            FontSize="14"
                            Foreground="#B8B8B8"
                            Text="{Binding Authors}"
                            TextWrapping="Wrap" />
                            </StackPanel>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBar}"/>
                </ListBox.Resources>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>

            </ListBox>

            <!--grid view-->
            <ListView ItemsSource="{Binding WorksList}"
          Grid.Row="0"
          Background="Transparent"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch"
          Width="Auto"
          HorizontalContentAlignment="Stretch"
          SelectedItem="{Binding SelectedWorkEntity, Mode=TwoWay}"
          Visibility="{Binding IsGridView, Converter={StaticResource BooleanToVisibilityConverter}}">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Width="Auto" MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}}" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>


                <ListView.ItemTemplate>
                    <DataTemplate DataType="entity:WorkEntity">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="10">
                            <StackPanel Width="250">
                                <TextBlock FontSize="16" FontWeight="Bold"
                               Foreground="#f8f8f8"
                               Text="{Binding Title}"
                               TextWrapping="Wrap" />
                                <TextBlock FontSize="14" Foreground="#B8B8B8"
                               Text="{Binding Publisher}"
                               TextWrapping="Wrap" />
                                <TextBlock FontSize="14" Foreground="#B8B8B8"
                               Text="{Binding Authors}"
                               TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBar}"/>
                </ListView.Resources>

            </ListView>

            <StackPanel 
                Grid.Row="1"
                Orientation="Vertical">
                
                <Button 
               Command="{Binding LoadMoreDocumentCommand}"
               Margin="10"
               Height="35"
               MaxWidth="350"
               Content="Load More"
               Style="{StaticResource ModernButton2}"></Button>


                <Button 
               Command="{Binding ClearDocumentsCommand}"
               Margin="10"
               Height="35"
               MaxWidth="350"
               Content="Clear"
               Style="{StaticResource ModernButton3}"></Button>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>   